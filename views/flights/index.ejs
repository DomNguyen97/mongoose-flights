 <%- include('../partials/header') %>
<h2>All Flights</h2>
    <table>
      <thead>
        <tr>
          <th>Delete Flight</th>
          <th>Airline</th>
          <th>Airport</th>
          <th>Flight Number</th>
          <th>Departs</th>
        </tr>
      </thead>
      <tbody>
        <% flights.forEach(function(f) { %>
          <tr>
            <td>
              <form action ="/flights/<%=f._id%>?_method=DELETE" method="POST" class="delete-form">
                <button type="submit">X</button>
                </form>
            </td>
            <td><%= f.airline %></td>
            <td><%= f.airport %></td>
            <td><%= f.flightNo %></td>
            <td><%= f.departs %></td>
            <td><a href="/flights/<%= f._id %>">Details</a></td>
          </tr>
        <% }) %>
      </tbody>
    </table>   
    <a href="/flights/new">Add New Flight</a>
    

     